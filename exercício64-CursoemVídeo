num = int(input('\033[1;30mDigite um número [\033[1;33m999\033[1;30m para parar]: '))
count = 0
soma = 0
while num != 999:
    num = int(input('Digite um número [\033[1;33m999\033[1;30m para parar]: '))
    soma += num
    count += 1
print('\033[1;33mFIM')
print('\033[1;30mForam digitados \033[1;33m{}\033[1;30m números'.format(count), soma)